							"raw": "{\n  \"model\": \"ollama::llama3\",\n  \"input\": {\n    \"role\": \"user\",\n    \"content\": {\n      \"type\": \"text\",\n      \"text\": \"Why is the sky blue?\"\n    }\n  }\n}"
